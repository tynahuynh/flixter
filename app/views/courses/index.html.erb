<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center course-index">Learn something today</h1>
  <hr />

  <% @courses.each do |course| %>
    <h2 class="text-center">
    <%= link_to course.title, course_path(course), class: 'course-title' %>
    </h2>
    <br />
    <div class="text-center">
    <%= image_tag course.image, class: 'img-fluid' %>
    </div>
    <div class="row">
      <div class="col-sm-10 col-12 course-description">
        <%= course.description %>
      </div>
      <div class="col-sm-2 col-12 text_center">
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-outline-secondary' %>
      </div>
    </div>
    <br class="clr" />
  <% end %>
</div>